<h1><%= @category.name %></h1>

<div id="all-category-products">
  <% if @products %>
    <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <div class="category-product">
          <%= image_tag("#{product.product_photo}", size: "150x150", class: "product") %><br>
          <%= link_to product.name, product_path(product) %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
