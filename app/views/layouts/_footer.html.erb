<div id="engadget-footer-social-container">
  <footer id="engadget-footer-social">
    <div class="footer-left">
      <div class="newsletter">
        <h6>Sign up for our newsletter</h6>
        <form action="/emails" method="post">
          <div class="input-group">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input class="input-group-field" name="email" type="text" placeholder="Email address"/>
            <div class="input-group-button">
              <button type="submit"><i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="footer-right">
      <h6>Follow us</h6>
      <i class="fa fa-facebook-square fa-3x" aria-hidden="true"></i>
      <i class="fa fa-twitter-square fa-3x" aria-hidden="true"></i>
      <i class="fa fa-google-plus-square fa-3x" aria-hidden="true"></i>
      <i class="fa fa-linkedin-square fa-3x" aria-hidden="true"></i>
    </div>
  </footer>
</div>
<div id="engadget-footer-contact-details-container">
  <footer id="engadget-footer-contact-details">
    <div class="footer-left">
      <div class="contact-details">
        <ul>
          <li><i class="fa fa-phone fa-lg" aria-hidden="true"></i>508 648 7005</li>
          <li><a data-toggle="animatedModal10"><i class="fa fa-envelope-o" aria-hidden="true"></i> Contact us</a></li>
          <li><i class="fa fa-map-marker fa-lg" aria-hidden="true"></i> Boston, MA</li>
        </ul>
      </div>
    </div>
    <div class="footer-right">
      <div class="logo">
        <i class="fa fa-copyright" aria-hidden="true"></i>
        <%= link_to "Cosmetrics", root_path %></div>
    </div>
  </footer>
</div>
