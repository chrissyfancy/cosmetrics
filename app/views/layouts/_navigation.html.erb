<div class="top-bar">
  <div class="top-bar-left">
    <ul class="dropdown menu mobile-list" data-dropdown-menu data-close-on-click-inside="false">
      <li class="nav root-link"><%= link_to "Cosmetrics", root_path %></li>
      <li class="nav"><i class="fa fa-bars" aria-hidden="true"></i>
      <% if user_signed_in? %>
        <ul class="menu vertical">
          <li><%= link_to 'Edit Your Account', edit_user_registration_path %></li>
          <li><%= link_to 'Sign Out', destroy_user_session_path, :method=>'delete' %></li>
          <% if current_user && current_user.role == "admin" %>
            <%= render 'layouts/admin_nav' %>
          <% end %>
        </ul>
        <% else %>
        <ul class="menu vertical">
          <li class="nav"><%= link_to 'Sign in', new_user_session_path %></li>
          <li class="nav"><%= link_to 'Register', new_user_registration_path %></li>
        </ul>
        <% end %>
      </li>
    </ul>
  </div>
  <%= render 'layouts/search_bar' %>
</div>
