<%= link_to "Back to All Products", products_path %>

<div id="react-app" data-product-id="<%= @product.id %>"></div>

<% if @reviews.empty?%>
  <h4> There are currently no reviews for this product.</h4>
<% else %>
  <%= render 'reviews' %>
<% end %>

<% if !current_user.nil? %>
  <h2>New Review</h2>
  <div class="new-review">
    <%= render "reviews/form" %>
  </div>
<% end %>
