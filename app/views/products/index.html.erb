<h1>SEPH-AKE-A</h1>

<div class="row medium-unstack">
  <% @categories.each do |category| %>
    <div class="category columns"><%= link_to category.name, category_path(category) %></div>
  <% end %>
</div>

<% if @products.blank? %>
  <h4>There are no products containing the term <%= params[:search] %>.</h4>
<% end %>

<% if !current_user.nil? && current_user.role == "admin" %>
  <h4><%= link_to "View All Users", admin_users_path %></h4>
  <h4><%= link_to "Add New Product", new_product_path %></h4>
  <%= render "products" %>
<% else %>
  <%= render "products" %>
<% end %>

<%= paginate @products %>
